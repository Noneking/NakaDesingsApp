<resources>

    <style name="Theme.LoginActivity" parent="AppTheme" />

    <style name="Theme.MainActivity" parent="MainActivity" />

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">

        <!-- ActionBar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>

        <!--Activity Colors-->
        <item name="colorPrimary">@color/window_background</item>
        <item name="colorPrimaryDark">@color/primary_dark_material_light</item>
        <item name="colorAccent">@color/blue_naka</item>

    </style>

    <style name="MainActivity" parent="Theme.AppCompat.Light">

        <!-- ActionBar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>

        <!--Activity Colors-->
        <item name="colorPrimary">@color/blue_naka</item>
        <item name="colorPrimaryDark">@color/primary_dark_material_light</item>
        <item name="colorAccent">@color/white</item>

    </style>

    <style name="Theme.LoginActivity.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.LoginActivity.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Tabs">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/blue_naka</item>
        <item name="android:backgroundStacked">@color/colorAccent</item>
    </style>

</resources>
